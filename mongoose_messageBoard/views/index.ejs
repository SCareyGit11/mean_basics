<html>
	<head>
	<meta charset="utf-8">
	<title>Mongoose Messages</title>
	</head>
	<body>
		<h1>HELLO</h1>
		<form action="/new" method="post">
			<p>Name: <input type='text' name='name'></p>
			

			<p>Message: <textarea name="text"></textarea></p>	
			<input type='submit' value='Submit'><br><hr>
		</form>
		   
    	
    		
    		<% for (var x in messages) { %>

				<h3><%= messages[x].name %></h3>    		
        		<h5><%= messages[x].text %></h5>
        		<form action="/comment/<%=messages[x].id%>" method="post">
        			<p><textarea name="text"></textarea></p>
        			<input type="submit" value="Comment">
        		</form>
        			
        			<% for (var i in comments) { %>
        			  <% if (comments[i]._message == messages[x].id) { %>
        				<p><%= comments[i].text %></p>
        				<% } %>
        			<% } %>	
		    <% } %>
    
	</body>
</html>